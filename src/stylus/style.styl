html
  box-sizing: border-box
  font-size: 16px

*, *:before, *:after
  box-sizing: border-box

body
  margin: 0
  padding: 0
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif

h1, h2, h3, h4, h5, h6
  margin: 0

ul
  padding: 0
  list-style-type: none

li
  margin-bottom: 0.5rem

a
  text-decoration: none
  color: #444

footer
  background-color: #e9e9e9

.container
  margin: 0 auto
  padding: 3rem 0
  max-width: 1200px

.logo-icon
  height: 2.5rem
  width: auto

.signup
  background-color: #fff1cc

.lead
  display: flex

.lead-caption
  flex: 1
  padding-right: 5rem

.lead-form
  flex: 2
  padding-top: 2.5rem
  box-sizing: border-box

.lead-title
  text-transform: uppercase
  word-spacing: 1

.form-field
  // min-width: 240px
  margin-left: 0.5rem
  padding: 1rem 1rem
  border: 1px solid #ffb900
  font-size: 1rem

.form-btn
  padding: 1rem 3rem
  margin-left: 0.5rem
  border: 1px solid #ffb900
  background-color: #ffb900
  font-size: 1rem
  cursor: pointer
  transition: 250ms ease-in-out  

.form-btn:hover
  background-color: #ffa500

.footer-grid
  margin: 0 auto
  display: flex

.footer-col
  flex: 1
  margin-right: 2em

.footer-company
  flex: 2
  margin-right: 2em

.footer-col-header
  margin-bottom: 1em
  text-transform: uppercase
