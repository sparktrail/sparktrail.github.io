article
  display: grid
  grid-template-columns: 3fr 1fr 16px minmax(0px, 760px) 16px 1fr 3fr
  padding: 1rem 1rem 0 1rem

  > *
    grid-column: 4

  > .img-full
    grid-column: 1 / -1
    margin: 1rem 0

  > .img-semi
    grid-column: 2 / -2
    margin: 1rem 0

  p
    margin: 1rem 0
    font-family: Georgia, serif
    font-size: calc(18px + 0.1vw)
    line-height: 1.6
    color: #333

    &:last-of-type
      margin-bottom: 4rem

  img
    width: 100%

  h1
    font-size: 2.5rem
    margin: 2rem 0

  h3
    font-size: 2rem
    margin-bottom: 1rem

  h4
    font-size: 1.5rem
    margin-bottom: 1rem
