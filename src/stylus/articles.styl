article
  display: grid
  grid-template-columns: 3fr 1fr 16px minmax(0px, 760px) 16px 1fr 3fr

  > *
    grid-column: 4

  > blockquote 
    grid-column: 3 / 5
    margin: 1rem 0
    font: 500 italic 1.5rem/1.6 'Playfair Display', serif
    color: #a0a0a0

  > .img-full
    grid-column: 1 / -1
    margin: 1rem 0

  > .img-semi
    grid-column: 2 / -2
    margin: 1rem 0

  p
    margin: 1rem 0
    font: calc(18px + 0.1vw)/1.6 Georgia, serif
    color: #333

    &:last-of-type
      margin-bottom: 4rem

  img
    width: 100%

  h1
    font-size: 2.5rem
    margin: 2rem 0

  h3
    font-size: 2rem
    margin-bottom: 0rem

  h4
    font-size: 1.5rem
    margin-bottom: 0rem

.blog-card
  margin: 4rem 0

.blog-title
  margin-top: 0.5rem
  font: 700 'Playfair Display', serif

.blog-meta
  margin: 0
  font: 500 1rem 'Segoe UI'
  text-transform: uppercase
  color: #333

.blog-desc
  font: calc(18px + 0.1vw)/1.6 Georgia, serif
  color: #333
  margin: 0.5rem 0 1rem
