article
  display: grid 
  grid-template-columns: 1fr minmax(0px, 800px) 1fr
  padding: 0 1rem

  > *
    grid-column: 2

  > figure
    grid-column: 1 / -1
    margin: 1rem 0

  p
    margin: 0 0 2rem 0
    font-family: Georgia, serif
    font-size: 1.25rem
    line-height: 1.5
    color: #333

    &:last-of-type
      margin-bottom: 4rem

h1
  font-size: 2.5rem
  margin: 2rem 0

h3
  font-size: 2rem

h4
  font-size: 1.5rem
