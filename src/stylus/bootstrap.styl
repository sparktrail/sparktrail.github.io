html
  box-sizing: border-box
  font-size: font-size-base

*, *:before, *:after
  box-sizing: border-box

body
  font-family: default-sans-serif
  background-color: #f9f9f9

h1, h2, h3, h4, h5, h6
  margin: 0 0 1rem
  
ul
  margin: 0
  padding: 0
  list-style-type: none

li
  margin-bottom: 0.5rem

a
  text-decoration: none
  color: #444

.container
  margin: 0 auto
  padding: 3rem 1rem
  max-width: 1200px

.caption
  margin-bottom: 0
  line-height: line-height-copy
  color: #666

.logo-icon
  height: 2.5rem
  width: auto
