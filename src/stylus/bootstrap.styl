:root
  --default-sans-serif: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif, 'Apple Color Emoji', 'Segoe UI Emoji', 'Segoe UI Symbol'
  --default-serif: Georgia, serif
  --default-monospace: Consolas, Monaco, Menlo, monospace
  --body-copy-serif: 'Fenix', 'Georgia', serif
  // Type scale
  --font-size-title: 48px
  --font-size-header: 36px
  --font-size-subheader: 30px
  --font-size-emphasise: 24px
  --font-size-copy: 21px
  --font-size-captions: 18px
  --font-size-base: 16px
  --font-size-footnotes: 14px
  
html
  box-sizing: border-box
  font-size: font-size-base

*, *:before, *:after
  box-sizing: border-box

body
  font-family: default-sans-serif
  background-color: #f9f9f9

h1, h2, h3, h4, h5, h6
  margin: 0 0 1rem
  
ul
  margin: 0
  padding: 0
  list-style-type: none

li
  margin-bottom: 0.5rem

a
  text-decoration: none
  color: #444

.container
  margin: 0 auto
  padding: 3rem 1rem
  max-width: 1200px

.caption
  margin-bottom: 0
  line-height: line-height-copy
  color: #666

.logo-icon
  height: 2.5rem
  width: auto
